@model IEnumerable<HelloWorld.Models.Parameter>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Operation.OperationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParameterName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParameterType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParameterDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Operation.OperationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParameterName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParameterType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParameterDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ParameterId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ParameterId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ParameterId })
        </td>
    </tr>
}

</table>
